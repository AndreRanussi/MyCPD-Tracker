<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:color="@color/whiteColor">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:color="@color/primaryColor">
        <shape android:shape="rectangle">
            <solid android:color="@color/btnPressed"/>
            <stroke android:color="@color/primaryColor" android:width="2dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>


</selector>