<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textNormal" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBoldSmallTitles" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBoldLargeTitles" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textActionbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="titleTextColor">@color/whiteColor</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>

    </style>

    <style name="btnStyle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>





</resources>